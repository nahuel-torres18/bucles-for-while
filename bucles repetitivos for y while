//Factorial de 10 usando un bucle FOR
let num = 1;
for (i = 1; i <= 10; i++) {
    num *= i;
}
console.log(num);

//Factorial de 10 usando bucle WHILE    
let num = 1;
i = 1;
while (i <= 10) {
    num *= i;
    i++;
}
console.log(num)

//Factorial de 10 usando bucle WHILE, condicional IF y la sentencia BREAK
let num = 1;
let i = 1;
while (true) {
    num *= i;
    i++;
    if (i > 10) {
        break;
    }
}
console.log(num);
